<%= turbo_stream_from "links" %>

<div class="mb-6">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-3xl font-bold text-[#cdd6f4]">Saved Links</h1>
    <%= link_to new_link_path, class: "inline-flex items-center gap-2 bg-gradient-to-r from-[#74c7ec] to-[#89b4fa] text-[#181825] font-semibold px-4 py-2 rounded-lg hover:from-[#89b4fa] hover:to-[#b4befe] transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl" do %>
      <span>âž•</span>
      Add New Link
    <% end %>
  </div>
  
  <div class="card mb-6">
    <h2 class="text-xl font-semibold mb-3">Filter</h2>
    <%= form_with url: links_path, method: :get, local: true, class: "space-y-4 md:space-y-0 md:flex md:items-end md:space-x-4" do |f| %>
      <div>
        <%= f.label :tag, "Tag:", class: "block text-sm font-medium mb-1" %>
        <%= f.text_field :tag, value: params[:tag], class: "w-full" %>
      </div>

      <div>
        <%= f.label :status, "Status:", class: "block text-sm font-medium mb-1" %>
        <%= f.select :status,
                options_for_select(
                  [["All", ""], ["Read", "read"], ["Unread", "unread"]],
                  params[:status]
                ),
                {}, { class: "w-full" } %>
      </div>

      <div class="md:ml-auto">
        <%= f.submit "Filter", class: "btn-primary w-full md:w-auto" %>
      </div>
    <% end %>
  </div>
</div>

<div id="links" class="space-y-4">
  <% if @links.any? %>
    <%= render @links %>
  <% else %>
    <div class="card text-center py-12">
      <div class="mb-6">
        <div class="text-6xl mb-4">ðŸ”—</div>
        <h3 class="text-2xl font-semibold text-[#cdd6f4] mb-2">Your link vault is empty</h3>
        <p class="text-[#a6adc8] mb-6">Start building your collection by saving your first link!</p>
      </div>
      <%= link_to new_link_path, class: "inline-flex items-center gap-2 bg-gradient-to-r from-[#74c7ec] to-[#89b4fa] text-[#181825] font-semibold px-6 py-3 rounded-lg hover:from-[#89b4fa] hover:to-[#b4befe] transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl" do %>
        <span class="text-xl">âž•</span>
        Add Your First Link
      <% end %>
    </div>
  <% end %>
</div>