<div class="max-w-md mx-auto card mt-8">
  <h1 class="text-2xl font-bold mb-6">Update your password</h1>

  <% if flash[:alert] %>
    <div class="bg-[#f38ba8]/20 p-3 rounded border border-[#f38ba8] mb-4">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <% if flash[:notice] %>
    <div class="bg-[#a6e3a1]/20 p-3 rounded border border-[#a6e3a1] mb-4">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <p class="mb-4 text-[#a6adc8]">Create a new password for your account.</p>

  <%= form_with url: password_path(params[:token]), method: :put, class: "space-y-4" do |form| %>
    <div>
      <%= form.label :password, "New Password", class: "block text-sm font-medium mb-1" %>
      <%= form.password_field :password, class: "w-full", placeholder: "Minimum 8 characters", required: true, autocomplete: "new-password", maxlength: 72 %>
    </div>

    <div>
      <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium mb-1" %>
      <%= form.password_field :password_confirmation, class: "w-full", placeholder: "Repeat your new password", required: true, autocomplete: "new-password", maxlength: 72 %>
    </div>

    <div class="pt-2">
      <%= form.submit "Update Password", class: "btn-primary w-full" %>
    </div>
  <% end %>

  <div class="mt-6 text-center text-sm">
    <%= link_to "â† Back to login", new_session_path %>
  </div>
</div>