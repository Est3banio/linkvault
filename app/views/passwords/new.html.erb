<div class="max-w-md mx-auto card mt-8">
  <h1 class="text-2xl font-bold mb-6">Forgot your password?</h1>

  <% if flash[:alert] %>
    <div class="bg-[#f38ba8]/20 p-3 rounded border border-[#f38ba8] mb-4">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <% if flash[:notice] %>
    <div class="bg-[#a6e3a1]/20 p-3 rounded border border-[#a6e3a1] mb-4">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <p class="mb-4 text-[#a6adc8]">Enter your email address and we'll send you a link to reset your password.</p>

  <%= form_with url: passwords_path, class: "space-y-4" do |form| %>
    <div>
      <%= form.label :email_address, "Email", class: "block text-sm font-medium mb-1" %>
      <%= form.email_field :email_address, class: "w-full", placeholder: "you@example.com", required: true, autofocus: true, autocomplete: "username", value: params[:email_address] %>
    </div>

    <div class="pt-2">
      <%= form.submit "Send Reset Instructions", class: "btn-primary w-full" %>
    </div>
  <% end %>

  <div class="mt-6 text-center text-sm">
    <%= link_to "← Back to login", new_session_path %>
  </div>
</div>