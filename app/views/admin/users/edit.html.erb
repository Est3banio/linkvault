<% content_for :title, "Admin - Edit #{@user.email}" %>

<div class="flex justify-between items-center mb-6">
  <h1 class="text-3xl font-bold text-[#cdd6f4]">Edit User</h1>
  <div class="flex space-x-2">
    <%= link_to "View", admin_user_path(@user), class: "btn" %>
    <%= link_to "Back to Users", admin_users_path, class: "btn" %>
  </div>
</div>

<div class="max-w-md mx-auto">
  <div class="card">
    <%= form_with(model: [:admin, @user], local: true, class: "space-y-4") do |form| %>
      <% if @user.errors.any? %>
        <div class="bg-[#f38ba8]/20 p-4 rounded border border-[#f38ba8] mb-4">
          <h4 class="font-medium text-[#f38ba8] mb-2">Please fix the following errors:</h4>
          <ul class="list-disc list-inside text-sm text-[#f38ba8]">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :email, class: "block text-sm font-medium mb-1" %>
        <%= form.email_field :email, class: "w-full", required: true %>
      </div>

      <div>
        <%= form.label :password, "New Password (leave blank to keep current)", class: "block text-sm font-medium mb-1" %>
        <%= form.password_field :password, class: "w-full", placeholder: "Minimum 8 characters" %>
      </div>

      <div>
        <%= form.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium mb-1" %>
        <%= form.password_field :password_confirmation, class: "w-full", placeholder: "Confirm password" %>
      </div>

      <div class="flex items-center">
        <%= form.check_box :admin, class: "rounded" %>
        <%= form.label :admin, "Administrator privileges", class: "ml-2 text-sm" %>
      </div>

      <div class="pt-4">
        <%= form.submit "Update User", class: "btn-primary w-full" %>
      </div>
    <% end %>
  </div>
</div>