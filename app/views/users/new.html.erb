<div class="max-w-md mx-auto card mt-8">
  <h1 class="text-2xl font-bold mb-6">Sign Up</h1>

  <%= form_with(model: @user, url: sign_up_path, class: "space-y-4") do |form| %>
    <% if @user.errors.any? %>
      <div class="bg-[#f38ba8]/20 p-3 rounded border border-[#f38ba8] mb-4">
        <h2 class="text-[#f38ba8] font-bold mb-2"><%= pluralize(@user.errors.count, "error") %> prohibited sign up:</h2>
        <ul class="list-disc list-inside">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :email_address, "Email", class: "block text-sm font-medium mb-1" %>
      <%= form.email_field :email_address, class: "w-full", placeholder: "you@example.com", autocomplete: "email" %>
    </div>

    <div>
      <%= form.label :password, class: "block text-sm font-medium mb-1" %>
      <%= form.password_field :password, class: "w-full", placeholder: "Minimum 8 characters", autocomplete: "new-password" %>
    </div>

    <div>
      <%= form.label :password_confirmation, "Confirm password", class: "block text-sm font-medium mb-1" %>
      <%= form.password_field :password_confirmation, class: "w-full", placeholder: "Repeat your password", autocomplete: "new-password" %>
    </div>

    <div class="pt-2">
      <%= form.submit "Sign Up", class: "btn-primary w-full" %>
    </div>
  <% end %>

  <div class="mt-6 text-center text-sm">
    Already have an account? <%= link_to "Log in", new_session_path %>
  </div>
</div>