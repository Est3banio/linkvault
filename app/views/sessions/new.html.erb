<div class="max-w-md mx-auto card mt-8">
  <h1 class="text-2xl font-bold mb-6">Log In</h1>

  <% if flash[:alert] %>
    <div class="bg-[#f38ba8]/20 p-3 rounded border border-[#f38ba8] mb-4">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <% if flash[:notice] %>
    <div class="bg-[#a6e3a1]/20 p-3 rounded border border-[#a6e3a1] mb-4">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%= form_with(url: session_path, method: :post, class: "space-y-4") do |form| %>
    <div>
      <%= form.label :email_address, "Email", class: "block text-sm font-medium mb-1" %>
      <%= form.email_field :email_address, class: "w-full", placeholder: "you@example.com", required: true, autofocus: true, autocomplete: "username", value: params[:email_address] %>
    </div>

    <div>
      <%= form.label :password, class: "block text-sm font-medium mb-1" %>
      <%= form.password_field :password, class: "w-full", placeholder: "Your password", required: true, autocomplete: "current-password", maxlength: 72 %>
    </div>

    <div class="pt-2">
      <%= form.submit "Log In", class: "btn-primary w-full" %>
    </div>
  <% end %>

  <div class="mt-6 text-center text-sm space-y-2">
    <p>
      <%= link_to "Forgot your password?", new_password_path %>
    </p>
    <p>
      Don't have an account? <%= link_to "Sign up", sign_up_path %>
    </p>
  </div>
</div>