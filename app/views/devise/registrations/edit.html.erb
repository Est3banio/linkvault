<div class="container mx-auto max-w-md px-4 py-8">
  <h2 class="text-3xl font-bold mb-6 text-center text-[#cdd6f4]">Edit Profile</h2>

  <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <%= form_for(resource, as: resource_name, url: user_registration_path, html: { method: :put, class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="space-y-2">
      <%= f.label :email, class: "block text-base font-semibold text-[#cdd6f4]" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                        class: "mt-1 block w-full px-3 py-2 bg-[#313244] border border-[#585b70] rounded-md shadow-sm text-[#cdd6f4] placeholder-[#6c7086] focus:outline-none focus:ring-2 focus:ring-[#89b4fa] focus:border-[#89b4fa]" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded" role="alert">
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      </div>
    <% end %>

    <div class="border-t border-[#585b70] pt-4">
      <h3 class="text-xl font-semibold text-[#cdd6f4] mb-3">Change Password</h3>
      <p class="text-base text-[#a6adc8] mb-4">Leave password fields blank if you don't want to change your password.</p>
      
      <div class="space-y-2">
        <%= f.label :password, "New Password", class: "block text-base font-semibold text-[#cdd6f4]" %>
        <%= f.password_field :password, autocomplete: "new-password", 
                            class: "mt-1 block w-full px-3 py-2 bg-[#313244] border border-[#585b70] rounded-md shadow-sm text-[#cdd6f4] placeholder-[#6c7086] focus:outline-none focus:ring-2 focus:ring-[#89b4fa] focus:border-[#89b4fa]" %>
        <% if @minimum_password_length %>
          <p class="text-base font-medium text-[#a6adc8]"><%= @minimum_password_length %> characters minimum</p>
        <% end %>
      </div>

      <div class="space-y-2">
        <%= f.label :password_confirmation, "Confirm New Password", class: "block text-base font-semibold text-[#cdd6f4]" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", 
                            class: "mt-1 block w-full px-3 py-2 bg-[#313244] border border-[#585b70] rounded-md shadow-sm text-[#cdd6f4] placeholder-[#6c7086] focus:outline-none focus:ring-2 focus:ring-[#89b4fa] focus:border-[#89b4fa]" %>
      </div>

      <div class="space-y-2">
        <%= f.label :current_password, "Current Password", class: "block text-base font-semibold text-[#cdd6f4]" %>
        <%= f.password_field :current_password, autocomplete: "current-password", 
                            class: "mt-1 block w-full px-3 py-2 bg-[#313244] border border-[#585b70] rounded-md shadow-sm text-[#cdd6f4] placeholder-[#6c7086] focus:outline-none focus:ring-2 focus:ring-[#89b4fa] focus:border-[#89b4fa]" %>
        <p class="text-base font-medium text-[#a6adc8]">We need your current password to confirm changes</p>
      </div>
    </div>

    <div class="pt-4">
      <%= f.submit "Update Profile", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-base font-semibold text-[#181825] bg-[#89b4fa] hover:bg-[#b4befe] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#89b4fa] transition-colors" %>
    </div>
  <% end %>

  <div class="border-t border-[#585b70] pt-6 mt-6">
    <h3 class="text-xl font-bold text-[#f38ba8] mb-3 flex items-center gap-2">
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
      </svg>
      Danger Zone
    </h3>
    <div class="bg-[#2d1b29] border border-[#f38ba8]/30 rounded-md p-4">
      <p class="text-base font-medium text-[#f38ba8] mb-4">⚠️ Once you delete your account, there is no going back. Please be certain.</p>
      <%= button_to "Delete Account", user_registration_path, 
                    data: { confirm: "Are you sure? This action cannot be undone.", turbo_confirm: "Are you sure? This action cannot be undone." }, 
                    method: :delete,
                    class: "bg-[#f38ba8] hover:bg-[#eba0ac] text-[#181825] font-bold py-2 px-4 rounded-md text-base focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#f38ba8] transition-colors" %>
    </div>
  </div>

  <div class="text-center mt-6">
    <%= link_to "Back to Dashboard", dashboard_path, class: "text-[#89b4fa] hover:text-[#74c7ec] text-base font-medium transition-colors" %>
  </div>
</div>
