<div class="max-w-md mx-auto card mt-8">
  <h1 class="text-2xl font-bold mb-6">Sign Up</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <% if resource.errors.any? %>
      <div class="bg-[#f38ba8]/20 p-3 rounded border border-[#f38ba8] mb-4">
        <h2 class="text-[#f38ba8] font-bold mb-2"><%= pluralize(resource.errors.count, "error") %> prohibited sign up:</h2>
        <ul class="list-disc list-inside">
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :email, class: "block text-sm font-medium mb-1" %>
      <%= f.email_field :email, class: "w-full", placeholder: "you@example.com", autocomplete: "email" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-sm font-medium mb-1" %>
      <% if @minimum_password_length %>
        <span class="text-xs text-[#6c7086]">(<%= @minimum_password_length %> characters minimum)</span>
      <% end %>
      <%= f.password_field :password, class: "w-full", placeholder: "Minimum 8 characters", autocomplete: "new-password" %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Confirm password", class: "block text-sm font-medium mb-1" %>
      <%= f.password_field :password_confirmation, class: "w-full", placeholder: "Repeat your password", autocomplete: "new-password" %>
    </div>

    <div class="pt-2">
      <%= f.submit "Sign Up", class: "btn-primary w-full" %>
    </div>
  <% end %>

  <div class="mt-6 text-center text-sm">
    <%= render "devise/shared/links" %>
  </div>
</div>
