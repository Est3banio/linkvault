<div class="max-w-md mx-auto card mt-8">
  <h1 class="text-2xl font-bold mb-6">Change Your Password</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div>
      <%= f.label :password, "New password", class: "block text-sm font-medium mb-1" %>
      <% if @minimum_password_length %>
        <span class="text-xs text-[#6c7086]">(<%= @minimum_password_length %> characters minimum)</span>
      <% end %>
      <%= f.password_field :password, class: "w-full", autofocus: true, autocomplete: "new-password" %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Confirm new password", class: "block text-sm font-medium mb-1" %>
      <%= f.password_field :password_confirmation, class: "w-full", autocomplete: "new-password" %>
    </div>

    <div class="pt-2">
      <%= f.submit "Change my password", class: "btn-primary w-full" %>
    </div>
  <% end %>

  <div class="mt-6 text-center text-sm">
    <%= render "devise/shared/links" %>
  </div>
</div>
