<div class="max-w-md mx-auto card mt-8">
  <h1 class="text-2xl font-bold mb-6">Reset Password</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, class: "block text-sm font-medium mb-1" %>
      <%= f.email_field :email, class: "w-full", placeholder: "you@example.com", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="pt-2">
      <%= f.submit "Send me reset instructions", class: "btn-primary w-full" %>
    </div>
  <% end %>

  <div class="mt-6 text-center text-sm">
    <%= render "devise/shared/links" %>
  </div>
</div>
