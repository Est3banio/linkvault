<% if flash[:alert] || flash[:notice] %>
  <div id="flash">
    <% if flash[:alert] %>
      <div data-controller="flash" class="fixed top-20 left-1/2 transform -translate-x-1/2 z-50 max-w-md w-full">
        <div class="bg-[#f38ba8]/10 backdrop-blur-sm p-4 rounded-lg border border-[#f38ba8]/30 shadow-lg">
          <div class="flex items-center">
            <span class="text-[#f38ba8] mr-3 text-xl">‚ö†Ô∏è</span>
            <div class="flex-1">
              <p class="text-[#f38ba8] text-sm font-medium"><%= flash[:alert] %></p>
            </div>
            <button class="text-[#f38ba8]/50 hover:text-[#f38ba8] ml-3 text-2xl leading-none font-light transition-colors p-1 -mr-1 rounded hover:bg-[#f38ba8]/10" data-action="click->flash#dismiss" aria-label="Dismiss alert">√ó</button>
          </div>
        </div>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div data-controller="flash" data-flash-timeout-value="5000" class="fixed top-20 left-1/2 transform -translate-x-1/2 z-50 max-w-md w-full">
        <div class="bg-[#a6e3a1]/10 backdrop-blur-sm p-4 rounded-lg border border-[#a6e3a1]/30 shadow-lg">
          <div class="flex items-center">
            <span class="text-[#a6e3a1] mr-3 text-xl">
              <% if flash[:notice].include?("saved") || flash[:notice].include?("created") %>
                üíæ
              <% elsif flash[:notice].include?("marked as read") %>
                ‚úì
              <% elsif flash[:notice].include?("marked as unread") %>
                üìå
              <% else %>
                ‚úÖ
              <% end %>
            </span>
            <div class="flex-1">
              <p class="text-[#a6e3a1] text-sm font-medium"><%= flash[:notice] %></p>
            </div>
            <button class="text-[#a6e3a1]/50 hover:text-[#a6e3a1] ml-3 text-2xl leading-none font-light transition-colors p-1 -mr-1 rounded hover:bg-[#a6e3a1]/10" data-action="click->flash#dismiss" aria-label="Dismiss notification">√ó</button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div id="flash"></div>
<% end %>