<!-- Hero Section -->
<div class="max-w-6xl mx-auto text-center py-12 px-4 sm:py-16">
  <div class="mb-8 animate-fade-in-up">
    <%= image_tag "LinkVaultLogo.png", alt: "LinkVault Logo", class: "mx-auto mb-6 w-32 h-32 sm:w-40 sm:h-40" %>
  </div>
  
  <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold mb-6 sm:mb-8 leading-tight animate-fade-in-up animate-delay-100">
    <span class="text-[#cdd6f4]">Welcome to</span> <span class="text-[#89b4fa]">LinkVault</span>
  </h1>
  
  <p class="text-lg sm:text-xl md:text-2xl mb-8 sm:mb-12 text-[#bac2de] max-w-3xl mx-auto leading-relaxed animate-fade-in-up animate-delay-200">
    Never lose track of important links again. Save, organize, and access your bookmarks from anywhere with style and simplicity.
  </p>
  
  <div class="flex flex-col items-center gap-4 sm:gap-6 animate-fade-in animate-delay-300">
    <% if user_signed_in? %>
      <%= link_to "View My Links", links_path, class: "btn-primary text-lg sm:text-xl px-8 sm:px-12 py-4 sm:py-5 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 font-semibold w-full sm:w-auto max-w-sm text-center" %>
    <% else %>
      <%= link_to "Start Managing Your Links", new_user_session_path, class: "btn-primary text-lg sm:text-xl px-6 sm:px-12 py-4 sm:py-5 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 font-semibold w-full sm:w-auto max-w-sm text-center" %>
      <div class="flex flex-col items-center gap-2 sm:gap-3 mt-2">
        <p class="text-base sm:text-lg text-[#bac2de] text-center">Already have an account?</p>
        <%= link_to "Sign in here", new_user_session_path, class: "text-[#89b4fa] hover:text-[#74c7ec] underline font-medium text-base sm:text-lg px-3 sm:px-4 py-2 rounded-lg hover:bg-[#89b4fa]/10 transition-all duration-300" %>
      </div>
    <% end %>
  </div>
</div>

